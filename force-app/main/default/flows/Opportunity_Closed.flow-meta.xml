                <elementReference>Create_Project</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>RequiredRole_List_Item.Name</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Loop_for_OLI.Name</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>RequiredRole_List_Item.Quantity__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Loop_for_OLI.Quantity__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>RequiredRole_List_Item.Role__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Loop_for_OLI.Role__c</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>RequiredRole_List_Item.Total_Coverage__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <numberValue>0.0</numberValue>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Add_list_item_to_collection</targetReference>
        </connector>
    </assignments>
